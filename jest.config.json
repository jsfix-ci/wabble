{

  "preset": "ts-jest",
  "testRunner": "jest-circus/runner",
  "testEnvironment": "node",

  "globals": {
    "ts-jest": {
      "tsconfig": "tsconfig.test.json"
    }
  },

  "testPathIgnorePatterns": [
    "<rootDir>/dist/",
    "<rootDir>/node_modules/"
  ],

  "coveragePathIgnorePatterns": [
    "test/__fixtures__/",
    "test/helpers"
  ],

  "reporters": [
    "default",
    "jest-junit"
  ]

}
